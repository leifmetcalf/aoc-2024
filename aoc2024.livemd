```elixir
require Integer

input = Day9.input()

chunks =
  input
  |> String.trim()
  |> String.codepoints()
  |> Stream.map(&String.to_integer/1)
  |> Enum.chunk_every(2, 2, [0])

n = length(chunks)

frees = Enum.map(chunks, fn [_, free] -> free end)
files = Enum.map(chunks, fn [file, _] -> file end)
file_map = list_to_map(files)

chunk_map =
  Enum.reduce(
    Enum.reverse(Stream.with_index(files)),
    Map.new(Stream.with_index(frees), fn {free, i} -> {i, {free, []}} end),
    fn
      {file, i}, map ->
        case Enum.find(0..(i - 1)//1, fn i -> map[i] |> elem(0) >= file end) do
          nil ->
            map |> Map.update!(i, fn {free, files} -> {free, files ++ [i]} end)

          j ->
            map
            |> Map.update!(j, fn {free, files} -> {free - file, [i | files]} end)
            |> Map.update!(i - 1, fn {free, files} -> {free + file, files} end)
        end
    end
  )

Enum.flat_map(0..(n - 1), fn i ->
  {free, files} = chunk_map[i]

  Stream.concat(
    Stream.flat_map(Enum.reverse(files), fn j -> Stream.duplicate(j, file_map[j]) end),
    Stream.duplicate(nil, free)
  )
end)
|> list_to_map()
|> Day9.checksum()
